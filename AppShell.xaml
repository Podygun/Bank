<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="BankTest.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:BankTest.Views"
	xmlns:local="clr-namespace:BankTest">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Branches"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:BranchesPage}"
		Route="BranchesPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Map"
		Icon="iconmap.png"
		ContentTemplate="{DataTemplate views:MapPage}"
		Route="MapPage" />
</Shell>
